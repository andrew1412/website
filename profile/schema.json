{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Profile",
  "description": "Profile configuration properties",
  "type": "object",
  "properties": {
    "avatar": {
      "type": "string",
      "format": "uri",
      "pattern": "^(https)://"
    },
    "username": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "bio": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128
    },
    "location": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128
    },
    "readme": {
      "type": "string",
      "format": "uri",
      "pattern": "^(https)://(.*)(\\.md)$"
    },
    "socialAccounts": {
      "type": "object",
      "properties": {
        "dribbble": {
          "type": "string",
          "format": "uri",
          "pattern": "^(https)://dribbble.com/"
        },
        "steam": {
          "type": "string",
          "format": "uri",
          "pattern": "^(https)://steamcommunity.com/"
        },
        "github": {
          "type": "string",
          "format": "uri",
          "pattern": "^(https)://github.com/"
        },
        "anilist": {
          "type": "string",
          "format": "uri",
          "pattern": "^(https)://anilist.co"
        },
        "matrix": {
          "type": "string",
          "format": "uri",
          "pattern": "^(https)://simplex.chat/"
        },
        "twitter": {
          "type": "string",
          "format": "uri",
          "pattern": "^(https)://x.com/"
        },
        "youtube": {
          "type": "string",
          "format": "uri",
          "pattern": "^(https)://youtube.com/"
        },
        "website": {
          "type": "string",
          "format": "uri",
          "pattern": "^(https)://"
        },
        "mail": {
          "type": "string",
          "format": "email"
        }
      }
    },
    "banner": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 50
        },
        "text": {
          "type": "string",
          "minLength": 1,
          "maxLength": 128
        }
      },
      "required": ["title", "text"]
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "format": "uri",
            "pattern": "^(https)://"
          },
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          }
        },
        "required": ["url", "title"]
      },
      "minItems": 1
    },
    "rss": {
      "type": "string",
      "format": "uri",
      "pattern": "^(https)://"
    }
  },
  "required": ["avatar", "username", "links", "bio", "socialAccounts"]
}
